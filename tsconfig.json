{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist", // or "build"
    "types": ["node", "playwright"]
  },
  "include": ["src", "tests", "utils"],
  "exclude": ["node_modules", "dist"]
}
